{
  "manifest_version": 3,
  "name": "ArraySpy",
  "version": "1.0",
  "description": "Debug and inspect array transformations by tracking array methods like map, filter, and flatMap. Access previous and current array values in real-time through the console.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [{
    "resources": ["array-spy.js"],
    "matches": ["<all_urls>"]
  }]
} 